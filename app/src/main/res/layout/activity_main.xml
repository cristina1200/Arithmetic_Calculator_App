<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/app_title"
        android:textColor="@color/gray_letters"
        android:textSize="28sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/apptitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/expression_text"
        android:textColor="@color/gray_letters"
        android:textSize="28sp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="56dp"
        android:gravity="end"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/expression"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/expression_text"
        android:textColor="@color/white_letters"
        android:textSize="54sp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="14dp"
        android:gravity="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="40dp"
        android:background="@color/keyboard_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp"
            >
            <Button
                android:id="@+id/ac_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:elevation="0dp"
                android:textColor="@color/red_letters"
                android:textSize="32sp"
                android:text="AC"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


            <Button
                android:id="@+id/c_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:elevation="0dp"
                android:text="C"
                android:textColor="@color/blue_letters"
                android:textSize="32sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/rest_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/blue_letters"
                android:text="%"
                android:textSize="32sp"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/slash_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/blue_letters"
                android:text="/"
                android:textSize="32sp"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="7"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


            <Button
                android:id="@+id/eight_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="8"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/nine_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="9"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/times_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/blue_letters"
                android:textSize="32sp"
                android:text="x"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/four_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="4"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


            <Button
                android:id="@+id/five_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="5"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/six_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="6"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/blue_letters"
                android:textSize="32sp"
                android:text="-"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/one_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="1"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


            <Button
                android:id="@+id/two_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="2"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/three_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="3"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/blue_letters"
                android:textSize="32sp"
                android:text="+"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/zerozero_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="00"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />


            <Button
                android:id="@+id/zero_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="0"
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/dot_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/keyboard_background"
                android:textColor="@color/white_letters"
                android:textSize="32sp"
                android:text="."
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />
            <Button
                android:id="@+id/equal_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_background"
                android:textColor="@color/blue_letters"
                android:textSize="32sp"
                android:text="="
                android:elevation="0dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"

                />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
